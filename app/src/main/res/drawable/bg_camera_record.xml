<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_selected="false">
        <layer-list>
            <item>
                <shape android:innerRadiusRatio="2.5" android:shape="ring" android:thicknessRatio="25" android:useLevel="false">
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item android:state_pressed="true" android:state_selected="false">
        <layer-list>
            <item>
                <shape android:innerRadiusRatio="2.5" android:shape="ring" android:thicknessRatio="25" android:useLevel="false">
                    <solid android:color="#C2C2C2" />
                </shape>
            </item>
            <item android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp">
                <shape android:shape="oval">
                    <solid android:color="#C2C2C2" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:innerRadiusRatio="2.5" android:shape="ring" android:thicknessRatio="25" android:useLevel="false">
                    <solid android:color="#fe6565" />
                </shape>
            </item>
            <item android:bottom="16dp" android:left="16dp" android:right="16dp" android:top="16dp">
                <shape android:shape="rectangle">
                    <solid android:color="#fe6565" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>