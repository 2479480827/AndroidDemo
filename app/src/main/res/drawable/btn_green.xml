<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
            <stroke android:width="1px" android:color="@color/white" />
            <solid android:color="#32a332" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
            <stroke android:width="1px" android:color="@color/white" />
            <solid android:color="#32CD32" />
        </shape>
    </item>
</selector>